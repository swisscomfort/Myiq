# EditorConfig is awesome: https://EditorConfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Python files
[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Rust files
[*.rs]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# YAML/TOML
[*.{yml,yaml,toml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown
[*.md]
trim_trailing_whitespace = false

# JSON
[*.json]
indent_style = space
indent_size = 2
